[sub_resource type="GDScript" id="GDScript_wq0qp"]
script/source = "extends CanvasLayer


@onready var fps_couter_label: Label = $Control/VBoxContainer/FPSCouterLabel
@onready var v_sync_label: RichTextLabel = $Control/VBoxContainer/VSyncLabel
@onready var render_resolution_label: Label = $Control/VBoxContainer/RenderResolutionLabel
@onready var fsr_2_label: RichTextLabel = $Control/VBoxContainer/FSR2Label
@onready var window_resolution_label: Label = $Control/VBoxContainer/WindowResolutionLabel


func _ready() -> void:
	if not OS.is_debug_build():
		visible = false
		process_mode = PROCESS_MODE_DISABLED

func _process(_delta) -> void:
		fps_couter_label.text = \"FPS: %d\" % int(Engine.get_frames_per_second())
		
		if DisplayServer.window_get_vsync_mode() == DisplayServer.VSYNC_DISABLED:
			v_sync_label.text = \"VSync: [color=red]OFF[/color]\"
		else:
			v_sync_label.text = \"VSync: [color=green]ON[/color]\"
		
		window_resolution_label.text = \"Window Resolution: %s\" % str(get_window().size)
		
		render_resolution_label.text = \"Render Resolution: %d%%\" % (get_viewport().scaling_3d_scale * 100)
		
		if get_viewport().scaling_3d_mode == Viewport.SCALING_3D_MODE_FSR2:
			fsr_2_label.text = \"FSR 2: [color=green]ON[/color]\"
		else:
			fsr_2_label.text = \"FSR 2: [color=red]OFF[/color]\"
"

